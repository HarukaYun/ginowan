<div class="bg_main">
  <picture
    ><source srcset="https://cdn.shopify.com/s/files/1/0615/5894/7910/files/bg_main.jpg" media="(min-width:600px)" />
    <img src="https://cdn.shopify.com/s/files/1/0615/5894/7910/files/bg_main_sp_under.jpg" alt=""
  /></picture>
</div>
<div id="fv_items">
  <div class="inner">
    <h2 data-aos="fade">
      商品一覧<span class="text_deco">Line up</span>
    </h2>
  </div>
</div>
<section id="items" class="inner">
  <ul class="item-list" data-aos="fade-up" data-aos-delay="100">
    {% for product in collection.products %}
    <li>
      <a class="item_link" href="{{ product.url }}">
        <div class="img">
          <img src="{{ product.featured_image.src | img_url: 'master' }}" alt="" />
        </div>
        <p class="cat">{% for tag in product.tags %}
        {{ tag }}{% if forloop.last == false %}, {% endif %}
      {% endfor %}</p>
        <p class="product_name">{{ product.title }}</p>
        <p class="price">{{ product.price | money }}</p>
        <!-- 星評価のプレースホルダー -->
        <div class="rating">
          <span class="star">★</span>
          <span class="star">★</span>
          <span class="star">★</span>
          <span class="star">★</span>
          <span class="star">☆</span>
          <p>(25)</p>
        </div>
      </a>
      <form action="/cart/add" method="post">
      <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
      <button type="submit" class="cart_btn">
        <svg
          class="icon_svg"
          viewBox="0 0 26 25"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
